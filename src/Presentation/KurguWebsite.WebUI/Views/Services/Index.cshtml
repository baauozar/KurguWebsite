@model KurguWebsite.Application.DTOs.Page.ServicesPageDto
@{
    ViewData["Title"] = "Our Services";
}

<section class="page-header page-header-modern page-header-lg bg-color-primary border-0 my-0">
    <div class="container container-xl-custom my-5">
        <div class="row">
            <div class="col-md-12 align-self-center p-static order-2 text-center">
                <h1 class="font-weight-bold text-10">Our Services</h1>
            </div>
        </div>
    </div>
</section>

<div class="container container-xl-custom py-5 my-3">
    <div class="row">
        @foreach (var service in Model.Services)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <a asp-controller="Services" asp-action="Detail" asp-route-slug="@service.Slug" class="text-decoration-none">
                    <div class="card card-style-1 custom-card-style-1">
                        <div class="card-body">
                            <i class="@service.IconClass text-color-primary font-weight-bold text-10"></i>
                            <h4 class="font-weight-bold text-6 text-color-dark mt-3">@service.Title</h4>
                            <p>@service.ShortDescription</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
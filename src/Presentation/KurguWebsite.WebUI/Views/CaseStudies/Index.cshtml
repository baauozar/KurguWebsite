@model List<KurguWebsite.WebUI.UIModel.CaseStudy.CaseStudyCardVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<section class="page-header page-header-modern page-header-lg bg-color-primary border-0 my-0">
    <div class="container container-xl-custom my-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="font-weight-bold text-10 mb-0">Case Studies</h1>
            </div>
        </div>
    </div>
</section>

<div class="container container-xl-custom py-5 my-3">
    <div class="row">
        @if (Model is { Count: > 0 })
        {
            foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrWhiteSpace(item.ThumbnailPath))
                        {
                            <img class="card-img-top" src="@item.ThumbnailPath" alt="@item.Title" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h3 class="h5 mb-1">
                                <a asp-route="CaseStudyDetail" asp-route-slug="@item.Slug">@item.Title</a>
                            </h3>
                            <div class="text-muted small mb-3">@item.CompletedDateText</div>
                            <div class="mt-auto">
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-route="CaseStudyDetail"
                                   asp-route-slug="@item.Slug">Read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12"><p>No case studies yet.</p></div>
        }
    </div>
</div>
